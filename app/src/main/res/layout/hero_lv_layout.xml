<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heroNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hero"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/avgdmgtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Average Damage per 10 minutes : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroTimePLayedText" />

    <TextView
        android:id="@+id/avgdmgvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/avgdmgtext"
        app:layout_constraintStart_toEndOf="@+id/avgdmgtext"
        app:layout_constraintTop_toTopOf="@+id/avgdmgtext" />

    <TextView
        android:id="@+id/heroTimePLayedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Time Played :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroNameTextView" />

    <TextView
        android:id="@+id/heroTimePLayedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/heroTimePLayedText"
        app:layout_constraintStart_toEndOf="@+id/heroTimePLayedText"
        app:layout_constraintTop_toTopOf="@+id/heroTimePLayedText" />

    <TextView
        android:id="@+id/avgKillsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Avegare kils per 10 minutes :"
        app:layout_constraintBottom_toBottomOf="@+id/avgdmgtext"
        app:layout_constraintEnd_toStartOf="@+id/avgKillsValue"
        app:layout_constraintTop_toTopOf="@+id/avgdmgtext" />

    <TextView
        android:id="@+id/avgKillsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/avgKillsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avgKillsText" />

</android.support.constraint.ConstraintLayout>